# Используем официальный Node.js образ в качестве базового
FROM node:14-alpine

# Устанавливаем рабочую директорию внутри контейнера
WORKDIR /app

# Копируем package.json и package-lock.json в контейнер
COPY package*.json ./

# Устанавливаем зависимости
RUN npm install

# Копируем весь исходный код в контейнер
COPY . .

# Сборка проекта для production
RUN npm run build

# Экспонируем порт, на котором будет работать ваше приложение
EXPOSE 80

# Устанавливаем простой сервер для отдачи статических файлов
RUN npm install -g serve

# Запускаем сервер, который будет обслуживать ваш скомпилированный проект
CMD ["serve", "-s", "dist", "-l", "80"]
